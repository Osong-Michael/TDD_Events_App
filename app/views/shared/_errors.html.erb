<% if @event.errors.any? %>
  <section id="errors">
    <header>
      <h2>
        Oops! Your form could not be saved.
      </h2>
      <h3>
        Please correct the following
        <%= pluralize(@event.errors.size, "error") %>:
      </h3>
    </header>
    <ul>
    <% @event.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </section>
<% end %>