<article>
  <header>
    <%= image_for(@event)%>
    <h1><%= @event.name%></h1>
     <h3><%= pluralize(@event.capacity, 'spot')%></h3>
  </header>
  <p>
    <%= @event.description %>
  </p>
  <h3>Where</h3>
  <p>
    <%= @event.location %>
  </p>
  <h3>When</h3>
  <p>
    <%= @event.starts_at %>
  </p>
  <h3>Price</h3>
  <p>
    <%= format_price(@event) %>
  </p>
</article>

<%= link_to "Edit Event", edit_event_path(@event) %> |
<%= link_to "Delete Event", event_path(@event), method: :delete, data: {confirm: 'Are you sure you want to delete event?'}%>