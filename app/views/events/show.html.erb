<article id="event" class="event">
  <header>
    <%= image_for(@event) %>
    <h1><%= @event.name %></h1>
    <h2><%= @event.starts_at %></h2>
  </header>
  
  <p>
    <%= @event.description %>
  </p>

  <p>
    <%= pluralize(@likers.size, 'like') %>
  </p>
  <% if @likers.any? %>
    <h3>Likers</h3>
    <ul>
      <% @likers.each do |user| %>
        <li>
          <%= link_to user.name, user %>
        </li>
      <% end %>
    </ul>
  <% end %>
  
  <h3>Price</h3>
  <p>
    <%= format_price(@event) %>
  </p>
  
  <h3>Location</h3>
  <p>
    <%= @event.location %>
  </p>
  
  <h3>Capacity</h3>
  <p>
    <%= pluralize(@event.capacity, 'spot') %>
  </p>

  <%= link_to 'Who is registered?', event_registrations_path(@event) %>
  
  <footer>
    <%= register_link(@event) %>
    <nav>
      <% if current_user_admin? %>
        <%= link_to 'Edit', edit_event_path(@event), class: 'button' %>
        <%= link_to 'Delete', @event, 
                    class: 'button',
                    method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </nav>
  </footer>
</article>

